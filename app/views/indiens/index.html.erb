
<h1>Indiens#index</h1>


<form action="/search" method="get">
  <input type="text" required="required" name="q" placeholder="Entrez un nom, prénom, date de naissance ou ancetre">
  <input type="submit"> </form>

  <p> <%= link_to "Reset", root_path %> </p>
  <p> <%= link_to "Statistiques", controller: "pages", action: "statistiques" %></p>
  <p> <%= link_to "Ajouter un nouveau memebre à la tribue", controller: "indiens", action: "new" %></p>



<h1>indiens list</h1>
<% if params[:filters].blank? && params[:q].blank?%>
<%= paginate @indiens %>
<% end %>
<table>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Surname</th>
    <th>Birthdate</th>
    <th>Ancestor</th>
    <th>Longitude</th>
    <th>Latitude</th>
  </thead>
  <% @indiens.each do |indien| %>
  <tr>
    <td><%= indien.id %></td>
    <td><%= indien.name %></td>
    <td><%= indien.surname %></td>
    <td><%= indien.birthdate %></td>
    <td><%= indien.ancestor %></td>
    <td><%= indien.longitude %></td>
    <td><%= indien.latitude %></td>
  </tr>
  <% end %>
</table>

